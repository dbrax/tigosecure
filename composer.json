{
    "name": "epmnzava/tigopesa",
    "description": "Php wrapper of Tigopesa api",
    "keywords": [
        "epmnzava",
        "Tigopesa"
    ],
    "homepage": "https://github.com/epmnzava/tigosecure",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Emmanuel Mnzava",
            "email": "epmnzava@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1|^8.2|^8.3",
        "guzzlehttp/guzzle": "^7.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Epmnzava\\Tigopesa\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Epmnzava\\Tigopesa\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
